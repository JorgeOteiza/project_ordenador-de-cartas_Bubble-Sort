{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true // Agrega esta l√≠nea para habilitar las variables globales de Node.js
  },
  "rules": {
    "strict": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-debugger": 0,
    "semi": ["error", "always"],
    "allowImportExportEverywhere": false,
    "comma-dangle": [
      1,
      {
        //when to use the last comma
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ]
  },
  "extends": ["eslint:recommended"]
}
